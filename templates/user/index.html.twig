{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    
        <h1 class="text-center mt-3">Gestion d'utilisteurs</h1><hr>

        <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Firstname</th>
      <th scope="col">Lastname</th>
      <th scope="col">Function</th>
    </tr>
  </thead>
  <tbody>
   {% for user in users %}
   
    <tr>
      <th scope="row">{{ user.id }}</th>
      <td>{{ user.firstname }}</td>
      <td>{{ user.lastname }}</td>
      <td>{{ user.function }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
       
                       
              
{% endblock %}
