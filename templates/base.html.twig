        <div class="content">
        {% block body %}


        {% endblock %}
        </div>

        
        <footer id="contactfooter" class="footer-global">
			<div class="footer-left">
                <iframe style="border: 0;" src="https://goo.gl/maps/mnjUiGTVpFwHdYz46" width="300" height="300" frameborder="0"></iframe>
				<p class="footer-copyright"> © 2020 - SchoolManagement </p>
			</div>

			<div class="footer-center">

				<div>
					<i class="fa fa-map-marker"></i>
					<p><span>45 Avenue de l'Ecole</span> Paris, 75000</p>
				</div>

				<div>
					<i class="fa fa-phone"></i>
